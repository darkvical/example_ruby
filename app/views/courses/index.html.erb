<h1>Searching courses for <%= @search_term %> </h1>
<table border="1"b>
	<tr>
		<th>Image</th>
		<th>Name</th>
		<th>Description</th>
	</tr>
	<% @courses.each do |course| %>
	<tr class=<%= cycle('even', 'odd')%> >
		<td><%=  image_tag(course['smallIcon']) %></td>
		<td><%=  course['name'] %></td>
		<td><%=  course['shortDescription'] %></td>
	</tr>
	<% end %>
</table>
